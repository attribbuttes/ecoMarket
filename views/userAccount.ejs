<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: '?'}) %>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="row">
			

			<div class="col-12">
				<h2 class="products-title">hi ! <%= customer.username %></h2>
			</div>
		</div>
		<div class="product-detail">
			<div class="row">
				<div class="col-12 col-lg-8">
					<img src="/images/user/<%= customer.image %>" alt="product image" class="product-detail-img">
					<p class="product-detail-description">
						<%= customer.text %>					</p>
				</div>
				<div class="col-12 col-lg-4">
					<article class="product-detail-info">
						<h2 class="product-detail-title"><%= customer.full_name %></h2>
						
							

						
						<hr>

						<a href="/<%= customer.id %>/edit" class="action-button edit">EDITAR DATOS DE LA CUENTA</a>
						<form action="/<%= customer.id %>/delete" method="POST" style="display: inline-flex">

							<button type="submit" class="action-button delete">ELIMINAR CUENTA</button>
						</form>
						
					</article>
				</div>
				
			</div>
			
		</div>
		
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>	
</html>