<%- include('./partials/head')%>
<body>
<%- include('./partials/header')%>
<!DOCTYPE html>
<html>
<head>
	<title>Shopping Cart</title>
</head>
<body>
	<h1>Shopping Cart</h1>
	<table>
		<thead>
			<tr>
				<th>Product</th>
				<th>Price</th>
				<th>Quantity</th>
				<th>Total</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% cart.items.forEach((item) => { %>
				<tr>
					<td><%= item.product.name %></td>
					<td><%= item.product.price %></td>
					<td><%= item.quantity %></td>
					<td><%= item.total %></td>
					<td>
						<form action="/shopping-cart/remove-item" method="POST">
							<input type="hidden" name="productId" value="<%= item.product.id %>">
							<button type="submit">Remove</button>
						</form>
					</td>
				</tr>
			<% }); %>
		</tbody>
		<tfoot>
			<tr>
				<td colspan="3">Total:</td>
				<td><%= cart.total %></td>
				<td></td>
			</tr>
		</tfoot>
	</table>
</body>
</html>

</body>

    
    <%- include('./partials/footer')%>
</body>
